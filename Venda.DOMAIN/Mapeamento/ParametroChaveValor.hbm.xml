<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Venda.DOMAIN"
                   namespace="Venda.DOMAIN.Entidades">

  <class name="ParametroChaveValor" table="parametrochavevalor" schema="vendinha">
    <id name="Id" column="id">
      <generator class="sequence">
        <param name="sequence">vendinha.parametro_id_seq</param>
      </generator>
    </id>

    <property name="Nome" column="nome" length="20"/>
    <property name="Valor" column="valor" type="int"/>
    <property name="status" column="situacao" type="bool"/>
  </class>

</hibernate-mapping>
